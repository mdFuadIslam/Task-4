<div class="text-end">
  <% if user_signed_in? %>
  <div class="d-flex align-items-center">
    <div class="me-2 name-container"> <%= current_user.name %> </div>
    <%= button_to "Log-Out", destroy_user_session_path, method: :delete, class: "btn btn-warning" %>
  </div>
  <% else %>
    <%= button_to "Log in", new_user_session_path, class: "btn btn-outline-light me-2" %>
  <% end %>
</div>